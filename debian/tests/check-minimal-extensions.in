#!/bin/sh
set -e
apt-get purge -yy lib@PVER@-stdlib 2>&1 || true

MIN_EXTS="_ssl _hashlib"
for mod in $MIN_EXTS; do
  @PVER@ -c "import $mod"
  test -e "/usr/lib/@PVER@/lib-dynload/${mod}.@EXTSUFFIX@"
done

MIN_BUILTINS=""
for mod in $MIN_BUILTINS; do
  @PVER@ -c "import $mod"
  test ! -e "/usr/lib/@PVER@/lib-dynload/${mod}.@EXTSUFFIX@"
done

test $(ls -1 /usr/lib/@PVER@/lib-dynload | wc -l) -eq $(echo $MIN_EXTS | wc -w)
